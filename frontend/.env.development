# 开发环境配置
VITE_APP_TITLE=企业ERP管理系统
VITE_APP_ENV=development

# API基础路径
VITE_API_BASE_URL=http://127.0.0.1:8000

# 路由基础路径
VITE_BASE_PATH=/

# 是否开启Mock
VITE_USE_MOCK=false

# 是否开启代理
VITE_USE_PROXY=true

# 代理前缀
VITE_API_PREFIX=/api

# Token存储key
VITE_TOKEN_KEY=erp_access_token
VITE_REFRESH_TOKEN_KEY=erp_refresh_token

# 加密密钥（生产环境需要更改）
VITE_ENCRYPT_KEY=erp2024secretkey

# 上传文件大小限制（MB）
VITE_UPLOAD_MAX_SIZE=10

# 图片上传格式限制
VITE_UPLOAD_IMG_TYPES=jpg,jpeg,png,gif,webp

# 文件上传格式限制
VITE_UPLOAD_FILE_TYPES=doc,docx,xls,xlsx,ppt,pptx,pdf,txt,zip,rar

# 是否开启水印
VITE_WATERMARK_ENABLED=false

# 主题配置
VITE_THEME_COLOR=#409EFF

# 是否开启多标签页
VITE_MULTI_TAB=true

# 是否开启面包屑
VITE_BREADCRUMB=true

# 是否固定头部
VITE_FIXED_HEADER=true

# 是否显示设置抽屉
VITE_SHOW_SETTINGS=true